{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "lib": [
      "es2022",
      "esnext"
    ],
    "types": [
      "node",
      "jest"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDirs": [
      "src",
      "tests"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationDir": "dist"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "configs/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}